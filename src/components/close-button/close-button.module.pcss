.close {
  position: absolute;
  top: 32px;
  right: 32px;
  width: 24px;
  height: 24px;
  background-image: url("../../assets/images/icons/close.svg");
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  background-color: transparent;
  border: 0;
  transition: opacity .2s ease;

  &:hover {
    cursor: pointer;
    opacity: 0.8;
  }
}
