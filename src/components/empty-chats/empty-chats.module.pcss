.empty-chats {
    background-color: var(--background);
    display: flex;
    align-items: center;
    justify-content: center;
}

.title {
    font-size: 20px;
    line-height: 24px;
    color: var(--light);
    text-align: center;
}

.wrapper {
    display: flex;
    align-items: stretch;
    flex-direction: column;
    justify-content: center;
    gap: 24px;
    width: 500px;
}