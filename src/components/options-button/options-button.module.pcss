.button {
    width: 24px;
    height: 24px;
    background-image: url("../../assets/images/icons/options.svg");
    background-repeat: no-repeat;
    background-position: center;
    background-color: transparent;
    border: 0;
    transition: opacity .2s ease;

    &:hover {
        opacity: .8;
        cursor: pointer;
    }
}