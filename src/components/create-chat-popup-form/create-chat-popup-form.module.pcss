.content {
    padding: 48px 24px;
    background: var(--background-accent);
    border-radius: 16px;
    z-index: 2;
    width: 512px;
    display: flex;
    justify-content: center;
    flex-direction: column;
    gap: 24px;
    position: relative;
}

.title {
    font-weight: 700;
    font-size: 24px;
    line-height: 30px;
    color: var(--light);
}
